{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["vuetify"]
  },
  "exclude": [
    "../sdk",
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    ".vite/**/*.ts",
    "src",
    "plugins"
  ],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
