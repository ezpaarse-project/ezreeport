{
  "name": "reporting-sdk-js",
  "version": "1.0.0",
  "description": "JS SDK to communicate with reporting API",
  "homepage": "https://github.com/ezpaarse-project/reporting#readme",
  "bugs": {
    "url": "https://github.com/ezpaarse-project/reporting/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezpaarse-project/reporting.git"
  },
  "license": "CeCILL",
  "author": "oxypomme",
  "exports": {
    "browser": {
      "import": "./dist/browser/reporting-sdk-js.mjs",
      "require": "./dist/browser/reporting-sdk-js.umd.js"
    },
    "node": {
      "default": "./dist/node/index.js"
    }
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s build:web build:node build:types",
    "build:node-vite": "tsc && BUILD_TARGET=node vite build",
    "build:node": "tsc --project tsconfig.node.json",
    "build:types": "tsc && BUILD_TARGET=types vite build",
    "build:web": "tsc && BUILD_TARGET=browser vite build",
    "lint": "eslint --fix --parser-options=project:./tsconfig.eslint.json .",
    "test": "npm run build && cd ../tests/ && npm run test:sdk"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --parser-options=project:./tsconfig.eslint.json"
    ]
  },
  "dependencies": {
    "axios": "^1.2.1",
    "date-fns": "^2.29.3",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1"
  }
}
