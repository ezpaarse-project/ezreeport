// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String     @id @default(uuid())
  name        String
  institution String
  layout      Json
  targets     String[]
  recurrence  Recurrence
  nextRun     DateTime?
  // TODO[feat]: add "lastRun"
  enabled     Boolean    @default(true)
  history     Json       @default("[]") // TODO[refactor]: move to table
  createdAt   DateTime   @default(now())
  updatedAt   DateTime?  @updatedAt

  @@index([institution])
}

enum Recurrence {
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  BIENNIAL
  YEARLY
}
