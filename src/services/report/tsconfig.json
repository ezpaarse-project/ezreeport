{
  "extends": "ts-node/node16/tsconfig.json",
  "include": [
    "**/*.ts",
    ".eslintrc.js"
  ],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  }
}