{
  "name": "reporting",
  "version": "1.0.0",
  "description": "Reporting service for ezMESURE/ezCOUNTER",
  "homepage": "https://github.com/ezpaarse-project/reporting#readme",
  "bugs": {
    "url": "https://github.com/ezpaarse-project/reporting/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezpaarse-project/reporting.git"
  },
  "license": "CeCILL",
  "author": "oxypomme",
  "scripts": {
    "lint": "npm run lint:report && npm run lint:mail",
    "lint:mail": "cd src/services/mail && npm run lint",
    "lint:report": "cd src/services/report && npm run lint",
    "prepare": "husky install",
    "setup": "node setup.js",
    "test": "cd tests && npm run test",
    "test:mail": "cd tests && npm run test:mail",
    "test:report": "cd tests && npm run test:report"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "sort-package-json": "^2.1.0"
  }
}
