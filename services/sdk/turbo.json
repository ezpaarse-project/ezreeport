{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:docs": {
      "outputs": ["docs/**"]
    },
    "build:js": {
      "dependsOn": ["^prebuild"],
      "outputs": ["dist/**"]
    },
    "build:types": {
      "dependsOn": ["^prebuild"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": [
        "build:js",
        "build:types",
        "build:docs"
      ]
    },
    "publish": {},
    "dev": {
      "dependsOn": ["^watch:docs", "^preview:docs"],
      "persistent": true
    }
  }
}