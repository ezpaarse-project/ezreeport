{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:docs": {
      "outputs": ["docs/**"]
    },
    "build:js": {
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["build:js", "build:docs"]
    },
    "dev": {
      "dependsOn": ["^watch:docs", "^preview:docs"],
      "persistent": true
    }
  }
}
