{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:docs": {
      "outputs": ["storybook-static/**"]
    },
    "build:js": {
      "dependsOn": ["@ezpaarse-project/ezreeport-sdk-js#build:js"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["build:js", "build:docs"]
    },
    "type-check": {
      "dependsOn": ["@ezpaarse-project/ezreeport-sdk-js#build:js"]
    }
  }
}
