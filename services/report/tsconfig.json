{
  "include": [
    "**/*.ts",
    "**/public/**/*.js",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    // Used by ESBuild
    "target": "ES2023",
    "strict": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },

    // Used by TypeScript
    "lib": ["ES2023"],
    "module": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  }
}