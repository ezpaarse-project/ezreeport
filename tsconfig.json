{
  "compilerOptions": {
    // Used by ESBuild
    "target": "ES2024",
    "strict": true,

    // Used by TypeScript
    "lib": ["ES2024"],
    "moduleDetection": "force",
    "module": "Preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitOverride": true
  }
}
